@model Anglican_Church_Australia.Models.Banner

@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Anglican_Church_Australia</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Anglican_Church_Australia.styles.css" asp-append-version="true" />
    <script src="~/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div id="first">
        <video autoplay muted loop id="myVideo">
            <source src=@Model.VideoUrl type="video/mp4">
        </video>
    </div>
    <div class="navigation">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><img id="bannerLogo" src=@Model.LogoUrl /></a>
                <button id="hamburger" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Worship</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Music</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Ministries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Support</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartialLight" />
                </div>
            </div>
        </nav>
    </div>
    <div class="bottom">
        <h1>@Model.ParishName</h1>
    </div>
    <p> id="clear"</p>
    <div id="second">
        <p>
            # RELATIVE CONTENT
        </p>
        sample text
    </div>
</body>
</html>
